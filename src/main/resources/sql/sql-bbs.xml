<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  	<!-- 아래의 주소는 맵퍼의 패키지.맵퍼이름 을 적어서 연결하기 -->
	<mapper namespace="com.bitc.bbs.mapper.BbsMapper">
	
	<!-- 전체목록 -->
	<!-- 아래의 리절트타입은 맵퍼의 임포트  -->
	<select id ="selectListBbs" resultType="com.bitc.bbs.dto.BbsDto">
		<![CDATA[
			SELECT 
				num, wish, goal_date 
			FROM 
				t_bbsboard 
			WHERE 
				del_yn = 'N' ORDER BY num DESC
		]]>
	</select>
	
	<!-- 상세목록 -->
	<select id ="selectDetailBbs" resultType="com.bitc.bbs.dto.BbsDto" parameterType="int">
		<![CDATA[
			SELECT 
				num, wish, goal_date 
			FROM 
				t_bbsboard 
			WHERE 
				num = #{num}
			AND 
				del_yn = 'N'
		]]>
	</select>
	
	<!-- 글 등록 -->
	<insert id ="insertBbs" parameterType="com.bitc.bbs.dto.BbsDto">
		<![CDATA[
			INSERT INTO 
				t_bbsboard 
				(wish, goal_date)
			VALUES 
				(#{wish}, #{goal_date})
		]]>
	</insert>
	
	<!-- 수정하기 -->
	<update id ="updateBbs" parameterType="com.bitc.bbs.dto.BbsDto">
		<![CDATA[
			UPDATE 
				t_bbsboard 
			SET 
				user_name = #{userName},
				phone = #{phone}, 
				tel = #{tel}, 
				email = #{email}, 
				addr = #{addr}
			WHERE 
				num = #{num}
		]]>
	</update>
	
	<!-- 삭제하기 -->
	<update id ="deleteBbs" parameterType="int">
		<![CDATA[
			DELETE FROM 
				t_bbsboard 
			WHERE 
				num = #{num}
		]]>
	</update>
	</mapper>
